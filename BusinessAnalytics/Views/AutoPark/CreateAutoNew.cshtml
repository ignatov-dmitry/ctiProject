@model db.Auto
@{ 
    Layout = null;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h2 class="modal-title text-text-bold-600" id="myModalLabel33">@ViewBag.TitlePart</h2>

        </div>

        @using (Ajax.BeginForm("CreateAutoNew", "AutoPark", new AjaxOptions { OnSuccess = "okAutoPark", OnFailure = "errorAutoPark" }, new { @class = "form" }))
        {
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Marka, new {@class= "form-control",requared = "requared",placeholder = "Марка" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Model, new { @class = "form-control", requared = "requared", placeholder = "Модель" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.NumberAuto, new { @class = "form-control", requared = "requared", placeholder = "Номер" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ObmDvig, new { @class = "form-control", requared = "requared", placeholder = "Объем двигателя" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ObmKuz, new { @class = "form-control", requared = "requared", placeholder = "Объем кузова" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.TypeTopl, new { @class = "form-control", requared = "requared", placeholder = "Тип топлива" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Year, new { @class = "form-control", requared = "requared", placeholder = "Год" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions center">
                <button type="submit" class="btn btn-primary">
                    <i class="icon-check2"></i> Сохранить
                </button>
            </div>
        }
    </div>
</div>