@model db.Claim
    @using Logics
@{
    Layout = null;
    TaskObj obj = new TaskObj();
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <label class="modal-title text-text-bold-600" id="myModalLabel33">Заявка</label>
        </div>




            <div class="row">
                <div class="offset-md-2 col-md-9">
                    @if (Model !=null)
                    {

                    
                    <div class="form-body">
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label for="Client">Клиент</label>
                            <p> @obj.ViewUserName(Model.IdClient).UserName</p>
                        </div>
                        <div class="form-group">
                            <label for="Product">Товар</label>
                            <p>@ProductView.Views(Model.IdProducts).Name</p>
                        </div>
                        <div class="form-group">
                            <label for="Count">Количество</label>
                            <p>@Model.Quantity</p>
                        </div>
                        <div class="form-group">
                            <label for="sum">Общая сумма</label>
                            <p>@(Model.Quantity * ProductView.Views(Model.IdProducts).Price)</p>
                        </div>
                    </div>
                    }
                    else
                    {

                    }
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Отмена</button>
                <a href="@Url.Content("~/Claim/Podpis/"+ Model.Id)" class="btn btn-outline-primary">Подписать</a>
            </div>
        
    </div>
</div>


