@model db.Notification
@{
    ViewBag.Title = Model.Message;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="card-block">
            <div class="form-group">
                <p>@Model.Message</p>
            </div>
            <div class="form-group">
                <a href="@Model.Url">Ссылка для перехода</a>
            </div>
    </div>
</div>

