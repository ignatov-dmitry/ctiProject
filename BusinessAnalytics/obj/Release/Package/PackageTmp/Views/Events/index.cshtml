
@{
    ViewBag.Title = "Добавить событие";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Add", "Events", FormMethod.Post, new { @class = "form" }))
{ 
    <div class="form-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="projectinput1">Название</label>
                    <input type="text" id="projectinput1" class="form-control" placeholder="Название" name="Name">
                </div>
            </div>
        </div>

        

        <div class="form-group">
            <label for="projectinput8">Описание</label>
            <textarea id="projectinput8" rows="5" class="form-control" name="Message" placeholder="Описание"></textarea>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-check2"></i> Сохранить
        </button>
    </div>
}

