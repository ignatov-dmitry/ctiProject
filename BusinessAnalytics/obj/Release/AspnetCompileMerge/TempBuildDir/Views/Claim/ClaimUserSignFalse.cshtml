@using Logics
@model IEnumerable<db.Claim>
@{ 
    Layout = null;
}
<div role="tabpanel" class="tab-pane fade active in" id="active" aria-labelledby="active-tab" aria-expanded="true">
    <div class="card-body collapse in">
        <div class="card-block card-dashboard">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Клиент</th>
                            <th>Товар</th>
                            <th>Количество</th>
                            <th>Дата</th>
                            <th>Статус</th>
                            <th class="text-center">Просмотр</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            TaskObj a = new TaskObj();
                        }
@if (Model != null)
{
                        foreach (var i in Model)
                        {
                            <tr>
                                <th scope="row">@Html.DisplayFor(modelItem => i.Id)</th>
                                <td>@a.ViewUserName(i.IdClient).UserName</td>
                                <td>@Html.DisplayFor(modelItem => ProductView.Views(i.IdProducts).Name)</td>
                                <td>@Html.DisplayFor(modelItem => i.Quantity)</td>
                                <td>@Html.DisplayFor(modelItem => i.Date)</td>
                                @if (i.Sign)
                                {
                                    <td class="success">Подписан</td>
                                }
                                else
                                {
                                    <td class="danger">Не подписан</td>
                                }
                                <td class="text-center">@Html.ActionLink("Просмотреть", "ViewClaim", new { id = i.Id }, new { @class = "edt", data_toggle = "modal", data_target = "#inlineForm" })</td>
                            </tr>
                        }
}
                    </tbody>
                </table>

                <div class="modal fade text-xs-left" id="inlineForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true">

                </div>


            </div>
        </div>
    </div>

</div>