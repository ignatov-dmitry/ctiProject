@model db.EditModel
@{
    ViewBag.Title = "Редактирование пользователя ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Редактирование .</h4>
    <hr />
    @Html.HiddenFor(m=>m.ID)
    <div class="form-body">
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label" for="Image">Картинка профиля</label>
                <div class="editor-field">
                    <input type="file" name="uploadImage" id="Image"  />
                </div>
            </div>
        </div>
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control border-primary" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-primary" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.FIO, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.FIO, new { @class = "form-control border-primary" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    <select name="Role" class="form-control border-primary" required>
                        <option value="manager">Менеджер</option>
                        <option value="sklad">Складовщик</option>
                    </select>

                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Сохранить" />
                </div>
            </div>
        </div>
    </div>
}

