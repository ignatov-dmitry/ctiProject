@model IEnumerable<db.FinishedProducts>
@{
    ViewBag.Title = "Готовая продукция";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .fs {
        display: none;
    }
</style>
<div class="row">
    <div class="col-xs-12">


        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Наличие на складе</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                        <li><a data-action="reloadFinishedProduct"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block card-dashboard">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="text-align:center;">Фото</th>
                                    <th>Наименование</th>
                                    <th>Кол-во(шт.)</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @if (item.Image != null)
                                        {
                                            <td style="    width: 20%;">@Html.Raw("<img style='width: 55%;display: block; margin: auto;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image) + "\" />")</td>
                                        }
                                        else if(item.Image== null)
                                        {
                                        <td class="center"></td>
                                        }

                                        <td style="">@item.Name</td>
                                        <td style="">@item.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>




                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


