@model db.Product
@{
    Layout = null;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <label class="modal-title text-text-bold-600" id="myModalLabel33">Редактирование модели @Html.DisplayFor(models => models.Name)</label>
        </div>

        

        @using (Html.BeginForm("Edit", "Sklad", FormMethod.Post, new { @class = "form" }))
        {
            <div class="row">
                <div class="offset-md-2 col-md-9">
                    <div class="form-body">
                        @Html.HiddenFor(m=>m.Id)
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Name, "Название товара")
                            @Html.TextBoxFor(m=>m.Name, new { @class = "form-control", @placeholder = "Название товара", @required = "required" })
                        </div>

                        <div class="form-group">
                            <label for="TypeProductId">Категория товара</label>                            
                            @Html.DropDownList("TypeProductId", ViewBag.TypeProducts as SelectList, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Price, "Цена")
                            @Html.TextBoxFor(m=>m.Price, new { @class = "form-control", @placeholder = "Цена", @required = "required", @onkeyup = "this.value = this.value.replace (/[^\\d.]/g, '').replace (/^0+/, '')" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Count, "Количество")
                            @Html.TextBoxFor(m=>m.Count, new { @class = "form-control", @placeholder = "Количество", @required = "required", @onkeyup = "this.value = this.value.replace (/[^\\d]/g, '').replace (/^0+/, '')" })
                        </div>
                    </div>
                 </div>
                </div>

            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Отмена</button>
                <button type="submit" class="btn btn-outline-primary">Сохранить</button>
            </div>
        }
    </div>
</div>
