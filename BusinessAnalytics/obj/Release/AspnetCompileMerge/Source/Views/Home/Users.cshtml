@model IEnumerable<db.UserModel>

@{
    ViewBag.Title = "Пользователи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Пользователи</h2>

<p>
    @Html.ActionLink("Добавить", "AddUser")
</p>
<div class="table-responsive">
