@model db.Driver
@{
    Layout = null;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h2 class="modal-title text-text-bold-600" id="myModalLabel33">@ViewBag.TitlePart</h2>

        </div>

        @using (Ajax.BeginForm("CreateDriverNew", "AutoPark", new AjaxOptions { OnSuccess = "okDriverPark", OnFailure = "errorDriverPark" }, new { @class = "form" }))
        {
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.TextBoxFor(y=>y.FIO, new { @class = "form-control", requared = "requared", placeholder = "ФИО" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.NumprPrav, new { @class = "form-control", requared = "requared", placeholder = "Номер прав" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", requared = "requared", placeholder = "Телефон" })
                        </div>
                        <div class="form-group">
                            @Html.DropDownList("AutoId", ViewBag.sel as SelectList, new { @class = "form-control",placeholder = "Авто" })
                        </div>
                        
                    </div>
                </div>
            </div>

            <div class="form-actions center">
                <button type="submit" class="btn btn-primary">
                    <i class="icon-check2"></i> Сохранить
                </button>
            </div>
        }
    </div>
</div>