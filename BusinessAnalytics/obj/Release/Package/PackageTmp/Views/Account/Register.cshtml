@using Microsoft.AspNet.Identity
@model BusinessAnalytics.Models.RegisterViewModel
@{
    ViewBag.Title = "Добавить пользователя";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Создание новой учетной записи.</h4>
    <hr />
    <div class="form-body">
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label" for="Image">Картинка профиля</label>
                <div class="editor-field">
                    <input type="file"  name="uploadImage" id="Image" required/>
                </div>
                </div>
            </div>
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control border-primary" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-primary" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                 @Html.LabelFor(m => m.FIO, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.FIO, new { @class = "form-control border-primary" })
                </div>
            </div>
            </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    <select name="Role" class="form-control border-primary" required >
                        <option value="manager">Менеджер</option>
                        <option value="sklad">Складовщик</option>
                    </select>
                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control border-primary" })
                </div>
            </div>
            </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-primary" })
                </div>
            </div>
            </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Добавить" />
                </div>
            </div>
            </div>
        </div>
}

    <!-- js -->
<script src="@Url.Content("~/Content/Main/js/jquery.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/html5.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.isotope.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.nicescroll.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.appear.js")"></script>
<script src="@Url.Content("~/Content/Main/js/count-to.js")"></script>
<script src="@Url.Content("~/Content/Main/js/twitter/jquery.tweet.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.inview.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.prettyPhoto.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.bxslider.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.themepunch.plugins.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/jquery.themepunch.revolution.min.js")"></script>
<script src="@Url.Content("~/Content/Main/js/custom.js")"></script>